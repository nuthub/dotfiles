[user]
	email = flake@uni-koblenz.de
	name = Julian Flake
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
[pull]
	rebase = true
[credential]
	helper = store
[init]
	defaultBranch = main
[core]
	editor = emacsclient -c -a=
	excludesFile = ~/.gitignore
[sendemail]
	smtpServer = smtp.uni-koblenz.de
	smtpServerPort = 587
	smtpEncryption = tls
	smtpUser = flake@uni-koblenz.de
    # (Optional: we'll leave this commented out and use a different way)
